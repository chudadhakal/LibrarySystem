
@{
    ViewData["Title"] = "Add Book";
}

<form action="" method="post" style="border:1px solid #ccc">
    <div class="container">
        <h1>Users can insert informations on books</h1>
        <p> Please fill in the information below on books</p>

        <label for="BookTitle'"><b>Title</b></label>
        <input type="text" placeholder="Enter book's title" name="BookTitle" required><br />

        <label for="Author"><b>Author</b></label>
        <input type="text" placeholder="Enter Author's name" name="Author" required><br />

        <label for="Genre'"><b>Genre</b></label>
        <input type="text" placeholder="Enter book's Genre" name="Genre" required><br />

        <label for="SSBN"><b>SSBN</b></label>
        <input type="text" placeholder="Enter SSBN" name="SSBN" required><br />

        <label for="Publisher'"><b>Publisher</b></label>
        <input type="text" placeholder="Enter book's title" name="Publisher" required><br />

        <label for="Published"><b>Published Date</b></label>
        <input type="text" placeholder="Enter Published Date" name="Published" required><br />

        <div class="clearfix">
            <button type="submit" class="Submitbtn">Submit</button>
        </div>
    </div>
</form>